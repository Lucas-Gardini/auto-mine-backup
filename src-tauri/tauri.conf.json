{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "auto-mine-backup",
  "version": "1.0.0",
  "identifier": "com.lucasgardini.auto-mine-backup",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "auto-mine-backup",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "label": "main",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}